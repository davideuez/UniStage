<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E91E1E"
    tools:context=".PropostaTirocinioActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="368dp"
                android:layout_height="647dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="21dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/titolo_tirocinio_proposta_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="79dp"
                        android:layout_marginTop="28dp"
                        android:layout_marginEnd="79dp"
                        android:ems="10"
                        android:hint="Titolo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/titolo_scheda_tiro_id" />

                    <EditText
                        android:id="@+id/luogo_tirocinio_proposta_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:ems="10"
                        android:hint="Luogo"
                        app:layout_constraintEnd_toEndOf="@+id/titolo_tirocinio_proposta_id"
                        app:layout_constraintStart_toStartOf="@+id/titolo_tirocinio_proposta_id"
                        app:layout_constraintTop_toBottomOf="@+id/titolo_tirocinio_proposta_id" />

                    <EditText
                        android:id="@+id/docente_tirocinio_proposta_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:ems="10"
                        android:hint="Docente"
                        app:layout_constraintEnd_toEndOf="@+id/luogo_tirocinio_proposta_id"
                        app:layout_constraintStart_toStartOf="@+id/luogo_tirocinio_proposta_id"
                        app:layout_constraintTop_toBottomOf="@+id/luogo_tirocinio_proposta_id" />

                    <EditText
                        android:id="@+id/cfu_tirocinio_proposta_id"
                        android:layout_width="78dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="28dp"
                        android:ems="10"
                        android:hint="CFU"
                        app:layout_constraintStart_toStartOf="@+id/docente_tirocinio_proposta_id"
                        app:layout_constraintTop_toBottomOf="@+id/docente_tirocinio_proposta_id" />

                    <EditText
                        android:id="@+id/durata_tirocinio_proposta_id"
                        android:layout_width="78dp"
                        android:layout_height="45dp"
                        android:layout_marginTop="28dp"
                        android:ems="10"
                        android:hint="durata"
                        app:layout_constraintEnd_toEndOf="@+id/docente_tirocinio_proposta_id"
                        app:layout_constraintTop_toBottomOf="@+id/docente_tirocinio_proposta_id" />

                    <EditText
                        android:id="@+id/descrizione_tirocinio_proposta_id"
                        android:layout_width="275dp"
                        android:layout_height="193dp"
                        android:layout_marginTop="28dp"
                        android:ems="10"
                        android:hint="Descrizione"
                        android:textAlignment="center"
                        app:layout_constraintEnd_toEndOf="@+id/durata_tirocinio_proposta_id"
                        app:layout_constraintStart_toStartOf="@+id/cfu_tirocinio_proposta_id"
                        app:layout_constraintTop_toBottomOf="@+id/durata_tirocinio_proposta_id" />

                    <Button
                        android:id="@+id/annulla_button_tirocinio_proposta_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="annulla"
                        app:layout_constraintStart_toStartOf="@+id/descrizione_tirocinio_proposta_id"
                        app:layout_constraintTop_toBottomOf="@+id/descrizione_tirocinio_proposta_id" />

                    <Button
                        android:id="@+id/inoltra_button_tirocinio_proposta_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="inoltra"
                        app:layout_constraintEnd_toEndOf="@+id/descrizione_tirocinio_proposta_id"
                        app:layout_constraintTop_toBottomOf="@+id/descrizione_tirocinio_proposta_id" />

                    <TextView
                        android:id="@+id/titolo_scheda_tiro_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:text="SCHEDA PER TIRARE I CIGNI"
                        app:layout_constraintEnd_toEndOf="@+id/titolo_tirocinio_proposta_id"
                        app:layout_constraintStart_toStartOf="@+id/titolo_tirocinio_proposta_id"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Scheda Tirocinio"
        app:titleMarginStart="130dp" />

    <ImageButton
        android:id="@+id/backarrow_proposta_tirocinio_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar2"
        app:layout_constraintStart_toStartOf="@+id/toolbar2"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />
</androidx.constraintlayout.widget.ConstraintLayout>