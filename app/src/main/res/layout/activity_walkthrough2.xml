<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Walkthrough1Activity"
    android:background="#7E191B">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="800dp"
        android:layout_height="800dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/walkthrough_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="98dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:src="@drawable/school" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Professore"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="39dp" />

        <TextView
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Pubblica e gestisci I tuoi stage universitari, potrai verificare l'avanzamento e approvare la relazione conclusiva degli studenti."
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/punti2" />

        <LinearLayout
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/skip"
                android:layout_width="145dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/montserrat_semibold"
                android:text="salta"
                android:textAlignment="center"
                android:textColor="#7E191B" />

            <Button
                android:id="@+id/avanti"
                android:layout_width="145dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/montserrat_semibold"
                android:text="avanti"
                android:textAlignment="center"
                android:textColor="#7E191B" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>