<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ITER TIROCINIO"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="23dp"
            android:layout_marginTop="24dp"
            android:textColor="#ffffff"/>

        <View
            android:layout_width="50dp"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_marginTop="1dp"
            android:backgroundTint="#ffffff"
            android:layout_marginBottom="24dp"/>

        <ScrollView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corners"
                android:layout_gravity="center">
                
            <LinearLayout
                android:layout_width="316dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIROCINIO \n INTERNO"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="17.5dp"
                    android:background="#000000"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIROCINIO \n ESTERNO"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textAlignment="center"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="40dp">

                <View
                    android:layout_width="64dp"
                    android:layout_height="2dp"
                    android:background="#000000"
                    android:layout_gravity="center"
                    android:backgroundTint="#BE1129"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AVVIO TIROCINIO"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_gravity="center"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:textColor="#BE1129"/>

                <View
                    android:layout_width="64dp"
                    android:layout_height="2dp"
                    android:background="#000000"
                    android:layout_gravity="center"
                    android:backgroundTint="#BE1129"/>

            </LinearLayout>

            <CheckBox
                android:id="@+id/checkbox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:textColor="#000000"
                android:text="Accertarsi di aver acquisito il numero minimo di crediti formativi"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat_regular"/>

            <CheckBox
                android:id="@+id/checkbox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textColor="#000000"
                android:text="Accertarsi di aver acquisito il numero minimo di crediti formativi"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat_regular"/>

            <CheckBox
                android:id="@+id/checkbox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textColor="#000000"
                android:text="Accertarsi di aver acquisito il numero minimo di crediti formativi"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat_regular"/>

            <CheckBox
                android:id="@+id/checkbox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textColor="#000000"
                android:text="Accertarsi di aver acquisito il numero minimo di crediti formativi"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat_regular"/>

            <CheckBox
                android:id="@+id/checkbox5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textColor="#000000"
                android:text="Accertarsi di aver acquisito il numero minimo di crediti formativi"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat_regular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <View
                    android:layout_width="64dp"
                    android:layout_height="2dp"
                    android:background="#000000"
                    android:layout_gravity="center"
                    android:backgroundTint="#BE1129"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONCLUSIONE TIROCINIO"
                    android:fontFamily="@font/montserrat_semibold"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="#BE1129"/>

                <View
                    android:layout_width="64dp"
                    android:layout_height="2dp"
                    android:background="#000000"
                    android:layout_gravity="center"
                    android:backgroundTint="#BE1129"/>

            </LinearLayout>

            <CheckBox
                android:id="@+id/checkbox6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textColor="#000000"
                android:text="Accertarsi di aver acquisito il numero minimo di crediti formativi"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat_regular"/>

            <CheckBox
                android:id="@+id/checkbox7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:textColor="#000000"
                android:text="Accertarsi di aver acquisito il numero minimo di crediti formativi"
                android:textSize="14dp"
                android:fontFamily="@font/montserrat_regular"/>

            </LinearLayout>

        </ScrollView>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>