<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="173dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corners"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/card_title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_semibold"
            android:text="DIGITAL TRANSFORMATION SPECIALIST"
            android:textColor="#000000"
            android:textSize="14dp"
            android:layout_marginTop="17dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="7dp"
            android:layout_marginStart="22dp">

            <TextView
                android:id="@+id/card_azienda_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Presso: SANIFONDS TRENTINO - \nFONDO SANITARIO INTEGRATIVO"
                android:textColor="#000000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/card_data_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="Iscrizioni aperte fino al: 13/09/2020"
                android:textColor="#000000"
                android:textSize="14dp" />

        </LinearLayout>

        <Button
            android:id="@+id/card_dettaglibutton_id"
            android:layout_width="198dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:background="@drawable/rounded_corners"
            android:text="VEDI DETTAGLI"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="#BE1129"
            android:textSize="15dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>