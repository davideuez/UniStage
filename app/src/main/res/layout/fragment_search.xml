<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="75dp">

        <LinearLayout
            android:id="@+id/ricerca_studente"
            android:layout_width="356dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:layout_marginTop="22.5dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            android:background="@drawable/rounded_corners_round">

            <EditText
                android:id="@+id/testo_ricerca_studente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nome professore/azienda"
                android:fontFamily="@font/montserrat_light"
                android:textSize="13dp"
                android:textColor="#BE1129"
                android:layout_gravity="center"
                android:layout_marginStart="23dp"/>

            <ImageView
                android:id="@+id/cerca"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="120dp"
                android:src="@drawable/ic_baseline_search_24" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_homefrag_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:scrollbars="vertical" />



    </LinearLayout>

</FrameLayout>