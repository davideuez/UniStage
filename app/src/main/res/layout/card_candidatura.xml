<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:padding="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="210dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corners"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/nome_candidato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_semibold"
            android:text="DAVIDE UEZ"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textAllCaps="true"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/matricola_candidato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/montserrat_medium"
            android:text="Mat. 192892"
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Tirocinio: "
                    android:textColor="#000000"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/nome_tirocinio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="SANIFONDS TRENTINO - FONDO SANITARIO INTEGRATIVO"
                    android:textColor="#000000"
                    android:textSize="14dp" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp">

            <Button
                android:id="@+id/declina"
                style="@style/BottoneRosso"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:text="DECLINA"/>

            <Button
                android:id="@+id/accetta"
                style="@style/BottoneRosso"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#92DE76"
                android:text="accetta"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>